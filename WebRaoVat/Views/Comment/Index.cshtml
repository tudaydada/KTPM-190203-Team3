@{
    ViewData["Title"] = "Comment Page";
    var ListComments = ViewData["ListComments"] as List<Comment>;
}

<div class="text-center">
    <h1 class="display-4">Comment</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table table-striped table-hover">
        <thead>
        <th>Id</th>
        <th>Post Title</th>
        <th>Messages</th>
        <th>Create date</th>
        </thead>
        <tbody>
            @foreach (var item in ListComments)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><a href="/Post?postId=@item.PostId">@item.Post.Title</a></td>
                    <td>@item.Messages</td>
                    <td>@DateTime.Now.ToString("dd/MM/yyy")</td>
                </tr>
            }
        </tbody>

    </table>