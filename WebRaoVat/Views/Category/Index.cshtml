@{
    ViewData["Title"] = "Category Page";
    var ListCategories = ViewData["ListCategories"] as List<Category>;
}


<table class="table table-striped table-hover">
        <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Status</th>
        <th>Post count</th>
        <th>
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create</a>
        </th>
        </thead>
        <tbody>
            @foreach (var category in ListCategories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                    @if(category.Status == true)
                    {
                         <span class="btn btn-success rounded-circle"></span>
                    }
                    else
                    {
                         <span class="btn btn-danger rounded-circle"></span>
                    }

                    </td>
                    <td>@category.Posts.Count</td>
                    <td>
                        <a href="/Category/Update?categoryId=@category.Id" class="btn btn-success">Update</a>
                        <a href="/Category/Delete?categoryId=@category.Id" class="btn btn-danger" onclick="return confirm('Xác nhận xóa')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>