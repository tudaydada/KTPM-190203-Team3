@{
    ViewData["Title"] = "Post detail Page";
    var Post = ViewData["Post"] as Post;
}

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Post.Title
        </dd>
        <dt class="col-sm-2">
            Descriptions
        </dt>
        <dd class="col-sm-10">
            @Post.Description
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Post.Category.Name
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Post.ImagePath" />
        </dd>
    </dl>
    <hr />
</div>
<div class="row d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-0 border" style="background-color: #f0f2f5;">
            <div class="card-body p-4">
                <div class="form-outline mb-4">
                    <form action="/Post/AddComment" method="POST">
                        <input hidden name="PostId" value="@Post.Id" />
                        <input name="Messages" class="form-control" placeholder="Type comment..." />
                        <input type="submit" style="display:none"/>
                    </form>
                </div>
                @if (Post.Comments != null)
                {
                    foreach (var item in Post.Comments)
                    {
                        <div class="card mb-4">
                            <div class="card-body">
                                <p>@item.Messages</p>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
</div>
