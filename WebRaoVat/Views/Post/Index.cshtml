@{
    ViewData["Title"] = "Home Page";
    var ListPost = ViewData["ListPost"] as List<Post>;
}

<table class="table table-striped table-hover">
    <thead>
    <th>Id</th>
    <th>Title</th>
    <th>Description</th>
    <th>Category</th>
    <th>Author</th>
    <th>Create date</th>
    <th>Status</th>
    <th>
        <a href="/Post/Create" class="btn btn-primary">Create</a>
    </th>
    </thead>
    <tbody>
        @foreach (var post in ListPost)
        {
            <tr>
                <td>@post.Id</td>
                <td>@post.Title</td>
                <td>@post.Description</td>
                <td>@post.Category.Name</td>
                <td><a href="/Accounts/Details/@post.Account.Id">@post.Account.FullName()</a></td>
                <td>@post.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (post.Status == true)
                    {
                        <span class="btn btn-success rounded-circle"></span>
                    }
                    else
                    {
                        <span class="btn btn-danger rounded-circle"></span>
                    }
                </td>
                <td>
                    <a href="/Post/Update?postId=@post.Id" class="btn btn-success">Update</a>
                    <a href="/Post/Delete?postId=@post.Id" class="btn btn-danger" onclick="return confirm('Xác nhận xóa')">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
